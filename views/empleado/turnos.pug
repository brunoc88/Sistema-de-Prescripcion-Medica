extends ../layout2 

block content 

    h1(class='text-center') TURNOS DE HOY!

    table#myTable.table.table-striped
      thead
        tr
          th ID
          th Nombre
          th Apellido
          th Obra Social 
          th Plan
          th Acciones
      tbody
        if turnos.length > 0
          each t in turnos
            tr
              td #{t.idTurno}
              td #{t.Paciente.nombre}
              td #{t.Paciente.apellido}
              td #{t.Paciente.Plan.ObraSocial.nombre}
              td #{t.Paciente.Plan.nombre}   
              td
                div(class="btn-group")
                  form(action=`/`, method="GET")
                   button(type="submit", class="btn btn-success mx-2") 
                    i(class="fas fa-edit")
                    |Atender
                
                      
        else
          tr
            td(colspan="4") No hay turnos registradas